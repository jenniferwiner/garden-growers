<!-- HEADER -->
<div class="container-fluid text-center">
    <h1 class='demologo profile' id="gardenHeader" data-id="{{gardenId}}">{{gardenName}}</h1>
    <p class="randomQuote"></p><br>
    <a href="/feed"><button class="hvr-grow-shadow feedBtn" type="button" name="button">Feed</button></a><br><br>
    <a href="/home"><button class="hvr-grow-shadow homeBtn" type="button" name="button">Home</button></a><br><br>
</div><br>
<!-- CONTAINERS FOR INSERTS -->
<div class="container" style="height: auto;">
  <div class="container" style="height: auto;">
    <div class="row">
      <div class="col-md-6 about-plants">
        <div class="col-xs-6 myMostCommon">
          <h4>Most Common Plants: </h4>
          {{#each commonPlants}}
          <h5>{{this.common_name}}: {{this.plant_count}}</h5>
          {{/each}}
        </div>
        <div class="col-xs-6 numberOfPlants">
          <h4>Number of Plant Types:
          <h4>{{numberOfPlants}}</h4></h4>
        </div>
      </div>
      <div class="col-md-6">
          <canvas id="doughnutChartUser" width="400" height="250"></canvas>
      </div>
    </div>
  </div>
  {{#each gardenData}}
  <div class="text-center" style="margin-top: 40px">
        <div class="col-md-6">
        <div class="panel panel-default clicable userPanel">
          <div class="panel-body">
            <div class="top-img">
              <img class="top-img" src="{{this.photo}}">
            </div>
          <div class="top-content">
              <div class="question">
                  <p class="x-large"><b>{{this.common_name}} | {{this.scientific_name}}</b></p>
              </div>
          <div class="made-by">
              <p class="text-muted">
                  <b class="cool-font">
                      <span>{{this.description}}</span>
                  </b>
              </p>
          </div><br>
              <hr>
              <div class="extra-info text-muted">
                  <div class="pull-right">Updated: {{this.updated_at}}</div><br>
                  <div class="container-fluid text-center editForm hidden">
                      <div>
                          <input type="text" id="edit_description" value="{{this.description}}" placeholder=" Description"><br>
                          <input type="text" id="edit_plant_count" value="{{this.plant_count}}" placeholder=" Number of plants being planted"><br>
                          <input type="text" id="edit_photo" value="{{this.photo}}" placeholder="Add Plant Photo"><br>
                          <button class="hvr-grow-shadow" id="editSubmit" type="submit" data-id={{this.id}}>Submit Updates</button>
                      </div>
                  </div>
                </div><br>
              </div>
            </div>
          </div>
        </div>
      </div>
  {{/each}}
</div>
</div>
